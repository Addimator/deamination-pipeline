    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Find bases",
            "cargo": {
                "args": [
                    "build",
                    "--bin=scripts",
                    "--package=scripts"
                ],
                "filter": {
                    "name": "scripts",
                    "kind": "bin"
                }
            },
            "args": [
                "find-bases",
                "/home/adrian/Documents/Promotion/deamination-pipeline/resources/example/aligned-reads.sam",
                "/home/adrian/Documents/Promotion/deamination-pipeline/resources/example/candidates.vcf",
                "/home/adrian/Documents/Promotion/deamination-pipeline/resources/example/pos_to_bases.txt"
            ],
            "cwd": "${workspaceFolder}" 
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Assign bases",
            "cargo": {
                "args": [
                    "build",
                    "--bin=scripts",
                    "--package=scripts"
                ],
                "filter": {
                    "name": "scripts",
                    "kind": "bin"
                }
            },
            "args": [
                "assign-bases",
                "/home/adrian/Documents/Promotion/deamination-pipeline/resources/example/alignments_CpG.bedGraph",
                "/home/adrian/Documents/Promotion/deamination-pipeline/resources/example/pos_to_bases.txt",
                "/home/adrian/Documents/Promotion/deamination-pipeline/resources/example/assigned_bases.txt"
            ],
            "cwd": "${workspaceFolder}" 
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'scripts'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=scripts",
                    "--package=scripts"
                ],
                "filter": {
                    "name": "scripts",
                    "kind": "bin"
                }
            },
            "args": [
            ],
            "cwd": "${workspaceFolder}"
        },        
    ]
}
